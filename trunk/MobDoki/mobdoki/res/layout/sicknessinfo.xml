<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		  android:orientation="vertical"
    		  android:layout_width="fill_parent"
    		  android:layout_height="fill_parent">

    <TextView android:id="@+sicknessinfo/sickness"
    		  android:layout_width="wrap_content"
    		  android:layout_height="wrap_content"
    		  android:textSize="20sp"
    		  android:layout_gravity="center_horizontal"
    		  android:textStyle="bold">
    </TextView>
        
    <TextView android:text="Betegség tünetei:"
    		  android:layout_height="wrap_content"
    		  android:layout_width="fill_parent"
    		  android:textStyle="bold"
    		  android:textColor="#FFFFFF"
    		  android:background="#777777">
    </TextView>
    
    <ListView android:id="@+sicknessinfo/symptomlist"
    		  android:layout_height="fill_parent"
    		  android:layout_width="fill_parent"
    		  android:layout_weight="50">
    </ListView>

    <TextView android:text="Betegséget kezelő kórházak:"
    		  android:layout_height="wrap_content"
    		  android:layout_width="fill_parent"
    		  android:textStyle="bold"
    		  android:background="#777777"
    		  android:textColor="#FFFFFF">
    </TextView>
    
    <ListView android:id="@+sicknessinfo/hospitallist"
    		  android:layout_height="fill_parent"
    		  android:layout_width="fill_parent"
    		  android:layout_weight="50">
    </ListView>
        
    <LinearLayout android:layout_width="fill_parent"
    			  android:layout_height="wrap_content">
        
        <Button android:text="Vissza"
        		android:id="@+sicknessinfo/back"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content">
        </Button>
        <LinearLayout android:layout_height="fill_parent"
			          android:layout_width="fill_parent"
			          android:orientation="vertical">
            <ProgressBar android:layout_height="wrap_content"
			             android:visibility="invisible"
			             android:layout_width="wrap_content"
			             android:id="@+sicknessinfo/progress"
			             android:layout_gravity="right">
            </ProgressBar>
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>