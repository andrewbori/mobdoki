<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
    		  android:layout_width="fill_parent"
    		  android:layout_height="fill_parent">

    <TextView android:text="Tünetek:"
    		  style="@style/TopLabel">
    </TextView>
    <LinearLayout android:layout_width="fill_parent"
    			  android:layout_height="wrap_content">
	    <MultiAutoCompleteTextView android:id="@+searchsickness/symptoms"
	    						   android:layout_width="fill_parent"
	    		  			  	   android:layout_height="wrap_content"
	    		  			  	   android:layout_weight="1">
	    </MultiAutoCompleteTextView>
	  	<ImageButton android:id="@+searchsickness/buttonSymptom"
					 style="@style/ButtonChooser">		 
		</ImageButton>
	</LinearLayout>
        
    <LinearLayout android:layout_width="fill_parent"
    			  android:layout_height="wrap_content">
    			  
        <Button android:text="Keresés"
        		android:id="@+searchsickness/search"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content">
        </Button>
        
    </LinearLayout>
   	

   	<ListView android:id="@+searchsickness/sicknesslist"
    		  android:layout_height="fill_parent"
    		  android:layout_width="wrap_content">
    </ListView>
    
</LinearLayout>